<h1>the admin zone...</h1>
<a href="/a/new"><button>new</button></a>
<table>
  <tr>
    <th>Title</th>
  </tr>
  <% posts.forEach(function(post) { %>

  <tr id="<%= post.id %>">
    <td><%= post.title %></td>
    <td>
      <a href="/a/edit/<%= post.id %>"><button>Edit</button></a>
    </td>
    <td><button onclick="deletePost('<%= post.id %>')">Delete</button></td>
  </tr>

  <% }); %>
</table>
<script>
  function deletePost(id) {
    var key = prompt("Please enter your key");
    document.getElementById(id).remove();
    data = {
      id: id,
      key: key,
    };
    fetch("/api/delete", {
      method: "DELETE", // or 'PUT'
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify(data),
    });
  }
</script>
